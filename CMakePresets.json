{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "avr-debug",
      "displayName": "AVR Debug (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-avr-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "MCU": "attiny2313",
        "F_CPU_HZ": "8000000UL"
      },
      "toolchainFile": "cmake/avr-gcc-toolchain.cmake"
    },
    {
      "name": "avr-release",
      "displayName": "AVR Release (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-avr-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "MCU": "attiny2313",
        "F_CPU_HZ": "8000000UL"
      },
      "toolchainFile": "cmake/avr-gcc-toolchain.cmake"
    },
    {
      "name": "host-index",
      "displayName": "Host Indexing (no AVR toolchain)",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/cmake-build-index",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "MCU": "attiny2313",
        "F_CPU_HZ": "8000000UL",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "host-index",
      "configurePreset": "host-index"
    },
    {
      "name": "avr-debug",
      "configurePreset": "avr-debug",
      "jobs": 8
    },
    {
      "name": "avr-release",
      "configurePreset": "avr-release",
      "jobs": 8
    }
  ],
  "testPresets": []
}
